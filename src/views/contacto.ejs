<body>  
    <%- include('../views/partials/header')%>

        <div class="contacto-container">
            <p>¡Bienvenido a nuestra página de contacto!</p>

            <form action="/enviar-mensaje" method="post">
                <!-- Agrega aquí tus campos de formulario -->
                <label for="nombre" class="titulos-form">Nombre:</label>
                <input type="text" id="nombre" name="nombre" required>

                <label for="correo" class="titulos-form">Correo electrónico:</label>
                <input type="email" id="correo" name="correo" required>

                <label for="mensaje" class="titulos-form">Mensaje:</label>
                <textarea id="mensaje" name="mensaje" required></textarea>

                <button type="submit" class="titulos-form">Enviar mensaje</button>
            </form>
        </div>

    <%- include('../views/partials/footer')%>

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>

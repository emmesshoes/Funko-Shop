<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home  |  Funkoshop</title>
    <link rel="stylesheet" href="../CSS/reset.css">
    <link rel="stylesheet" href="../CSS/index.css">
    <link rel="stylesheet" href="../CSS/carrito-de-compras.css">
    <link rel="stylesheet" href="../CSS/footer.css"> 
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  </head>
</head>
<body>    
  <%- include('../views/partials/header')%>

    <main>
      <div class="section" style="display: flex; justify-content: center;">
        <div class="summary-box" style="background-color: #f0f0f0; border: 1px solid #ccc; padding: 10px; width: 1000px;">
          <!-- Sección de elementos del carrito -->
          <div class="section">
            <div class="row">
              <div class="column">ID del Producto</div>
              <div class="column">Nombre del Producto</div>
              <div class="column">Cantidad</div>
              <div class="column">Precio Unitario</div>
            </div>
      
            <% productosInfo.forEach(info => { %>
              <div class="row">
                <div class="column"><%= info.producto.id_producto %></div>
                <div class="column">
                  <% const rutaCompletaFront = info.producto.imagen_front; %>
                  <% const rutaRelativaFront = rutaCompletaFront.replace('public', ''); %>
                  <%console.log(rutaRelativaFront) %>
                  <img src="<%= rutaRelativaFront %>" alt="Miniatura">
                  <%= info.producto.nombre %>
                </div>
                <div class="column"><%= info.elemento.cantidad %></div>
                <div class="column">$<%= info.elemento.precio_unitario %></div>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
      
      <!-- Segunda sección -->
      <div class="section" style="display: flex; justify-content:flex-end;">
        <div class="summary-box" style="background-color: #f0f0f0; border: 1px solid #ccc; padding: 10px; width: 400px;">
          <div class="summary-title">RESUMEN</div>
          <div class="summary-list">
            <div class="summary-column">Cantidad de elementos</div>
            <div class="summary-column">3</div>
            <div class="summary-line2"></div>
            <div class="summary-column">Subtotal</div>
            <div class="summary-column">$5399</div>
            <div class="summary-line2"></div>
            <div class="summary-column">ENVÍO</div>
            <div class="summary-column">$0.00</div>
            <div class="summary-line"></div>
            <div class="summary-column">TOTAL</div>
            <div class="summary-column">$5399</div>
          </div>
          <button class="summary-button">IR A PAGAR</button>
        </div>
      </div>
      
    
    
 
   
    <%- include('../views/partials/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>    
</body>
</html>
